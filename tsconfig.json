{
  "compilerOptions": {
    "rootDir": "src",

    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "useDefineForClassFields": false,

    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitOverride": true,

    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "jsxImportSource": "@greycat/web",
    "types": []
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
