use runtime;

@expose
task task_without_params() {
  for (var i = 0; i < 1_000_000_000; i++) {
    println("test");
  }
  return 42;
}

@expose
task task_with_params(name: String, age: int) {
  return name;
}

@expose
task task_long_running() {
  Runtime::sleep(10_s);
}

@expose
task mainTask() {
  Task::spawn(project::subTask, [0]);
  Task::spawn(project::subTask, [1]);
}

task subTask(id: int) {
  return id;
}